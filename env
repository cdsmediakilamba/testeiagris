# Arquivo de exemplo para configurações de produção no cPanel
# Copie este arquivo para .env e configure com seus valores reais

# Configuração do banco de dados PostgreSQL
# Substitua pelos dados fornecidos pelo seu provedor de hospedagem cPanel
DATABASE_URL="postgresql://usuario:senha@localhost:5432/nome_do_banco"

# Configuração da aplicação
NODE_ENV="production"
PORT=3000
SESSION_SECRET="sua_chave_secreta_muito_forte_de_pelo_menos_32_caracteres"

# Configurações específicas para cPanel
CPANEL_MODE="true"
BASE_PATH=""

# Configurações de upload
UPLOAD_MAX_SIZE="10485760"
UPLOAD_PATH="./photos"

# Configurações de segurança
COOKIE_SECURE="true"
COOKIE_HTTP_ONLY="true"
COOKIE_SAME_SITE="strict"

# Configurações de cache
CACHE_ENABLED="true"
CACHE_TTL="300"

# Configurações de log
LOG_LEVEL="info"
LOG_TO_FILE="true"
LOG_FILE_PATH="./logs/app.log"

# Configurações de backup
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"

# Configurações específicas para ambiente compartilhado
MAX_MEMORY="512"
GC_INTERVAL="30000"